<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:fonts="clr-namespace:CookBook.App.Resources.Fonts"
                    x:Class="CookBook.App.Resources.Styles.EditorStyle">
    <Style x:Key="FormEditorStyle" TargetType="Editor">
        <Setter Property="BackgroundColor" Value="{DynamicResource FormEntryBackgroundColor}"/>
        <Setter Property="TextColor" Value="{DynamicResource FormEntryTextColor}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="{x:Static fonts:Fonts.Regular}"/>
    </Style>
</ResourceDictionary>