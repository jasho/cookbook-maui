<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="CookBook.Maui.Resources.Styles.EditorStyle"
                    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:fonts="clr-namespace:CookBook.Maui.Resources.Fonts;assembly=CookBook.Maui.Common">
    <Style x:Key="FormEditorStyle"
           TargetType="Editor">
        <Setter Property="BackgroundColor" Value="{DynamicResource FormEntryBackgroundColor}"/>
        <Setter Property="TextColor" Value="{DynamicResource FormEntryTextColor}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="{x:Static fonts:Fonts.Regular}"/>
    </Style>
</ResourceDictionary>