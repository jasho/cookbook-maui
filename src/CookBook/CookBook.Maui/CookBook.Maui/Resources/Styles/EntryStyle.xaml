<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="CookBook.Maui.Resources.Styles.EntryStyle"
                    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:fonts="clr-namespace:CookBook.Maui.Resources.Fonts">
    <Style x:Key="FormEntryStyle"
           TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{DynamicResource FormEntryBackgroundColor}"/>
        <Setter Property="TextColor" Value="{DynamicResource FormEntryTextColor}"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="{x:Static fonts:Fonts.Regular}"/>
    </Style>
</ResourceDictionary>