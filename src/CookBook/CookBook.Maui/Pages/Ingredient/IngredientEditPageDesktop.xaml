<?xml version="1.0" encoding="utf-8" ?>
<base:ContentPageBase x:Class="CookBook.Maui.Pages.IngredientEditPageDesktop"
                      xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:base="clr-namespace:CookBook.Maui.Pages.Base"
                      xmlns:texts="clr-namespace:CookBook.Maui.Resources.Texts"
                      xmlns:vm="clr-namespace:CookBook.Maui.ViewModels.Ingredient"
                      x:DataType="vm:IngredientEditViewModel"
                      Title="{OnIdiom Phone={x:Static texts:IngredientEditViewTexts.Page_Title},
                                      Desktop=''}"
                      Style="{StaticResource ContentPageStyle}">
    <Grid RowDefinitions="70, *">

        <StackLayout HeightRequest="30"
                     HorizontalOptions="End"
                     Orientation="Horizontal"
                     Spacing="15">
            <Button BackgroundColor="{StaticResource PrimaryColor}"
                    Command="{Binding SaveCommand}"
                    CornerRadius="5"
                    Text="{x:Static texts:IngredientEditViewTexts.Save_Button_Text_Desktop}"/>
        </StackLayout>

        <Grid Grid.Row="1"
              HorizontalOptions="Center"
              VerticalOptions="Start"
              ColumnDefinitions="*, Auto, Auto, *"
              ColumnSpacing="20"
              RowDefinitions="170, *"
              RowSpacing="20">

            <Frame Grid.Row="0"
                   Grid.Column="1"
                   WidthRequest="170"
                   HeightRequest="170"
                   HorizontalOptions="Center"
                   Padding="0"
                   BorderColor="{StaticResource ImageBorderColor}"
                   CornerRadius="10"
                   IsClippedToBounds="True">
                <Grid WidthRequest="170">
                    <Image WidthRequest="170"
                           HeightRequest="170"
                           Aspect="AspectFill"
                           Source="{Binding Ingredient.ImageUrl}"/>

                    <Button HorizontalOptions="Center"
                            VerticalOptions="End"
                            Margin="0,0,0,10"
                            CornerRadius="5"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Text="{x:Static texts:IngredientEditViewTexts.SelectImage_Button_Text}"/>
                </Grid>
            </Frame>

            <StackLayout Grid.Row="0"
                         Grid.RowSpan="2"
                         Grid.Column="2"
                         HorizontalOptions="FillAndExpand"
                         Orientation="Vertical"
                         Spacing="10">
                <Label Style="{StaticResource RegularLabelStyle}"
                       Text="{x:Static texts:IngredientEditViewTexts.Name_Label_Text}"
                       TextColor="{StaticResource PrimaryLabelTextColor}"/>

                <Entry HorizontalOptions="FillAndExpand"
                       Style="{StaticResource FormEntryStyle}"
                       Text="{Binding Ingredient.Name}"/>

                <Label Style="{StaticResource RegularLabelStyle}"
                       Text="{x:Static texts:IngredientEditViewTexts.Description_Label_Text}"
                       TextColor="{StaticResource PrimaryLabelTextColor}"/>

                <Entry HorizontalOptions="FillAndExpand"
                       Style="{StaticResource FormEntryStyle}"
                       Text="{Binding Ingredient.Description}"/>
            </StackLayout>
        </Grid>
    </Grid>
</base:ContentPageBase>