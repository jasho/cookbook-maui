<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="CookBook.Maui.Resources.Styles.LabelStyle"
                    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:fonts="clr-namespace:CookBook.Maui.Resources.Fonts">

    <Style ApplyToDerivedTypes="True"
           TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource PrimaryLabelTextColor}"/>
    </Style>

    <Style x:Key="RegularLabelStyle"
           TargetType="Label">
        <Setter Property="FontFamily" Value="{x:Static fonts:Fonts.Regular}"/>
    </Style>

    <Style x:Key="MediumLabelStyle"
           TargetType="Label">
        <Setter Property="FontFamily" Value="{x:Static fonts:Fonts.Medium}"/>
    </Style>

    <Style x:Key="BoldLabelStyle"
           TargetType="Label">
        <Setter Property="FontFamily" Value="{x:Static fonts:Fonts.Bold}"/>
    </Style>
</ResourceDictionary>