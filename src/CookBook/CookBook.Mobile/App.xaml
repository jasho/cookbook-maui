<Application x:Class="CookBook.Mobile.App"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:CookBook.Mobile.Converters" xmlns:fonts="clr-namespace:CookBook.Mobile.Resources.Fonts"
             xmlns:styles="clr-namespace:CookBook.Mobile.Resources.Styles" xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <styles:ButtonStyle />
                <styles:ContentPageStyle />
                <styles:EditorStyle />
                <styles:EntryStyle />
                <styles:LabelStyle />
                <styles:DarkTheme />
            </ResourceDictionary.MergedDictionaries>

            <converters:FoodTypeToColorConverter x:Key="FoodTypeToColorConverter" />
            <converters:FoodTypeToStringConverter x:Key="FoodTypeToStringConverter" />
            <converters:FoodTypeToIconConverter x:Key="FoodTypeToIconConverter" />
            <converters:UnitToStringConverter x:Key="UnitToStringConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
