<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:fonts="clr-namespace:CookBook.Mobile.Resources.Fonts"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="CookBook.Mobile.LabelStyle">
    <Style x:Key="LabelStyleBase" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource PrimaryLabelTextColor}"/>
    </Style>

    <Style x:Key="RegularLabelStyle" TargetType="Label"
           BasedOn="{StaticResource LabelStyleBase}">
        <Setter Property="FontFamily" Value="{x:Static fonts:Fonts.Regular}" />
    </Style>

    <Style x:Key="MediumLabelStyle" TargetType="Label"
           BasedOn="{StaticResource LabelStyleBase}">
        <Setter Property="FontFamily" Value="{x:Static fonts:Fonts.Medium}" />
    </Style>

    <Style x:Key="BoldLabelStyle" TargetType="Label"
           BasedOn="{StaticResource LabelStyleBase}">
        <Setter Property="FontFamily" Value="{x:Static fonts:Fonts.Bold}" />
    </Style>
</ResourceDictionary>